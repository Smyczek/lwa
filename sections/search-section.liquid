<div class="search-section page-width{% if section.settings.subfixclass !=blank %} {{section.settings.subfixclass}}{% endif %}" 
   style="{% if section.settings.margin_block !=blank %}margin:{{section.settings.margin_block}}; {% endif %}
          {% if section.settings.padding_block !=blank %}padding:{{section.settings.padding_block}}; {% endif %}">
    {% if section.settings.serach_heading !=blank %}<h2>{{section.settings.serach_heading}}</h2>{% endif %}
    {% include 'searchpage' %}
</div>


{% schema %}
  {
    "name": "Search",
	"class": "search_field",
    "settings":[      
         {
            "type": "header",
            "content": "Design Section"
         },
         {
         	"type": "text",
         	"id": "subfixclass",
         	"label": "Add class"
         },
         {
            "type": "text",
            "id": "margin_block",
            "label": "Margin",
            "placeholder": "0px 0px"
         },
         {
            "type": "text",
            "id": "padding_block",
            "label": "Padding",
            "placeholder": "0px 0px"
         },
		 {
			"type": "text",
			"id": "serach_heading",
			"label": "Section title",
			"default": "Search Living Water Database"
		 }
	],
    "presets": [
    {
      "name": "Search"
    }
  ]
  }
{% endschema %}
